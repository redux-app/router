{
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
    ]
  },
  "rules": {
    "ordered-imports": false,
    "no-shadowed-variable": false,
    "no-console": { "severity": "warning" },
    "no-empty-interface": false,
    "object-literal-sort-keys": false,
    "no-empty": false,
    "no-debugger": { "severity": "warning" },
    "curly": false,
    "radix": false
  }
}
